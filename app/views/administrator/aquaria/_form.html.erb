<%= render 'shared/error_messages' %>

<%= form_with model: [:administrator, aquarium] do |f| %>
<div class="form-group">
  <%= f.label :name, '水族館名' %>
  <%= f.text_field :name, class: 'form-control' %>
</div>
<div class="form-group">
  <%= f.label :introduction, '本文' %>
  <%= f.text_area :introduction, class: 'form-control', rows: 10 %>
</div>
<div class="form-group">
  <%= f.label :address, '住所' %>
  <%= f.text_field :address, class: 'form-control' %>
</div>
<div class="form-group">
  <%= f.label :official, '公式HPのURL' %>
  <%= f.text_field :official, class: 'form-control' %>
</div>
<div class="form-group">
  <%= f.label :aquarium_img, '水族館の画像' %>
  <br>
  <%= f.file_field :aquarium_img %>
</div>
<div class="form-group row">
  <span class="col-12">タグ</span>
  <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :name) do |tag| %>
  <div class="form-check col-2">
    <%= tag.label class: 'form-check-label' do %>
    <%= tag.check_box class: 'form-check-input' %>
    <%= tag.text %>
    <% end %>
  </div>
  <% end %>
</div>
<%= f.submit '完了', class: 'btn btn-primary' %>
<% end %>