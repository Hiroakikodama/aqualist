<% if @current_user.administrator? %>
<div>
  <h1>ユーザー管理画面</h1>
  <p>管理者名：<%= @current_user.name %></p>
  <%= link_to '管理者サイド', administrator_aquaria_path, class: "btn btn-outline-light" %>
  <table class="table table-dark table-sm table-hover">
    <thead>
      <tr>
        <th>名前</th>
        <th>登録日時</th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.created_at.to_s(:datetime_jp) %></td>
        <td></td>
        <td><%= link_to '削除', [:administrator, user], class: 'btn btn-danger', method: :delete %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @users %>
</div>
<% else %>
<div>
  <h1>不正なアクセス</h1>
  <p>直ちに対策を取る。覚悟すること。</p>
</div>
<% end %>