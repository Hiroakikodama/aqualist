<% if flash[:error_messages] %>
<div class="alert alert-danger">
  <ul>
    <% flash[:error_messages].each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>

<%= form_for aquarium do |f| %>
<div class="form-group">
  <%= f.label :name, '水族館名' %>
  <%= f.text_field :name, class: 'form-control' %>
</div>
<div class="form-group">
  <%= f.label :introduction, '本文' %>
  <%= f.text_area :introduction, class: 'form-control', rows: 10 %>
</div>
<div class="form-group">
  <%= f.label :address, '住所' %>
  <%= f.text_field :address, class: 'form-control' %>
</div>
<div class="form-group">
  <%= f.label :official, '公式HPのURL' %>
  <%= f.text_field :official, class: 'form-control' %>
</div>
<div class="form-group">
  <%= f.label :aquarium_img, '水族館の画像' %>
  <br>
  <%= f.file_field :aquarium_img %>
</div>
<%= f.submit '新規作成', class: 'btn btn-primary' %>
<% end %>